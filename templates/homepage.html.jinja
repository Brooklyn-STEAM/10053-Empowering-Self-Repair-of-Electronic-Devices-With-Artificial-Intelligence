<body class="bg-[#0b2c4d] text-[#d6ecff] font-mono">

<!-- Navbar -->
{% include "components/navbar.html.jinja" %}

<!-- HERO SECTION -->
<section class="flex flex-col lg:flex-row items-center justify-between bg-[#0e3a63] border-b-2 border-dashed border-[#6fb7ff] p-10 lg:p-20 gap-8">

    <!-- LEFT PANEL -->
    <div class="w-full lg:w-1/3 border-2 border-dashed border-[#6fb7ff] p-6">
        <h1 class="text-2xl mb-4 uppercase tracking-wider">Project</h1>
